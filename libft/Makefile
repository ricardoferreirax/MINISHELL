NAME = libft.a
CFLAGS = -Wall -Werror -Wextra
SRCSFILES = $(shell find . -name srcs.txt)
SRCS = $(foreach f,$(SRCSFILES),$(shell awk 'NR==1{path=$$0; next} {print path"/"$$0}' $(f)))
OBJS = $(SRCS:.c=.o)

all: $(NAME)

$(NAME): $(OBJS)
	@ar rcs $(NAME) $(OBJS)

$(OBJS): %.o: %.c
	@cc $(CFLAGS) -c $< -o $@


clean:
	@rm -f $(OBJS)

fclean: clean
	@rm -f $(NAME)

re: fclean all

.PHONY: all fclean clean re
